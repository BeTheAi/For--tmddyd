<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <title>Write</title>
  </head>
  <body>
    <%- include ("./nav.ejs") %>
	  
	 
	<h4 class="container mt-4"><strong>글 리스트</strong></h4>

	<ul class="list-group container mt-4">
		<% if(posts.length > 0) { %>
			<% for (var i = 0; i < posts.length; i++){ %>
				<li class="list-group-item" id="<%= posts[i]._id %>">
					<h4 class='view' data-id='<%= posts[i]._id %>' style='cursor: pointer;'> 제목 : <%= posts[i].title %> </h4>
					<p> 내용 : <%= posts[i].contents %> hits : <%= posts[i].hits %> </p>
					<button class='delete btn btn-outline-danger btn-sm' data-id='<%= posts[i]._id %>'>삭제</button>
				</li>
			<% } %>
		<% } else { %>
			<div class='container mt-4'>
				<div class="alert alert-primary" role="alert">현재 등록된 글이 없습니다.</div>
			</div>
		<% } %>
	</ul>
	  
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	  
	<script>
		//게시물 삭제 버튼 구현
		$('.delete').click( (e) => {
			var postNum = e.target.dataset.id;
			$.ajax({
				method : 'DELETE',
				url : '/process/delete',
				data : { _id : postNum }
			}).done( (results) => {
				var deleteUI = '#' + postNum;
				console.log('ui fadeout exec');
				$(deleteUI).fadeOut();
			}).fail( (xhr, textStatus, errThrown) => {
				console.log("서버에서 보내온 오류 정보 : ", xhr, textStatus, errThrown);
			});
		})
		
		//게시물 이동 기능 구현
		$('.view').click( (e) => {
			var postNum = e.target.dataset.id;
			$.ajax({
				method : 'GET',
				url : '/process/showpost/'+postNum,
				//data : { _id : postNum }
			}).done( (results) => {
				console.log('call view');
				// Contents 영역 제거
				$('body').children().remove();
            	// Contents 영역 교체
            	$('body').html(results);
			}).fail( (xhr, textStatus, errThrown) => {
				console.log("서버에서 보내온 오류 정보 : ", xhr, textStatus, errThrown);
			});
		})
	</script>
	  

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
  </body>
</html>